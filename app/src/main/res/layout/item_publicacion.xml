<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/background_color2"
    android:padding="16dp">

    <!-- Título de la publicación -->
    <TextView
        android:id="@+id/titulo_publicacion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Título de la publicación"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <ImageView
        android:id="@+id/imagen_publicacion"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="fitCenter"
        android:contentDescription="Imagen de la publicación"
        android:src="@mipmap/publicacion" />

    <!-- Fecha de publicación -->
    <TextView
        android:id="@+id/fecha_publicacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fecha de publicación"
        android:textSize="14sp"
        android:textColor="#757575"
        android:layout_marginTop="8dp" />

    <!-- Descripción de la publicación -->
    <TextView
        android:id="@+id/descripcion_publicacion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Descripción de la publicación"
        android:textSize="16sp"
        android:layout_marginTop="16dp" />
</LinearLayout>
